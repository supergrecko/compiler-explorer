{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2016"
    ],
    "allowJs": true,
    "checkJs": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "rootDir": ".",
    "outDir": "dist",

    "downlevelIteration": true,

    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    "module": "commonjs",
    "moduleResolution": "classic",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["lib", "app.js"],
  "exclude": ["static", "node_modules"]
}
